{
  "compilerOptions": {
    "module": "CommonJS",
    "strict": true,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "baseUrl": "src",
    "lib": ["ESNext"],
    "paths": {
      "@domain": ["./domain/"],
      "@utils": ["./utils/"]
    }
  }
}
